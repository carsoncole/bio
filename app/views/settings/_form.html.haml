= form_for @setting do |f|
  - if @setting.errors.any?
    #error_explanation
      %h2= "#{pluralize(@setting.errors.count, "error")} prohibited this setting from being saved:"
      %ul
        - @setting.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :name
    = f.text_field :name
  .form-group
    = f.label :description
    = f.text_field :description
  .form-group
    = f.label :address
    = f.text_field :address
  .form-group
    = f.label :email
    = f.text_field :email
  .form-group
    = f.label :phone
    = f.text_field :phone
  .form-group
    = f.label :status
    = f.text_field :status, placeholder: 'Status, ie. Available'
  .actions
    = f.submit 'Save'
