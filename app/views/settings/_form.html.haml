= form_for @setting do |f|
  - if @setting.errors.any?
    #error_explanation
      %h2= "#{pluralize(@setting.errors.count, "error")} prohibited this setting from being saved:"
      %ul
        - @setting.errors.full_messages.each do |message|
          %li= message

  .row
    .col-md-7
      .form-group
        = f.label :name
        = f.text_field :name, class: 'form-control', placeholder: 'Name'
  .form-group
    = f.label :description
    = f.text_field :description, class: 'form-control', placeholder: 'Description'
  .form-group
    = f.label :address
    = f.text_field :address, class: 'form-control', placeholder: 'Address'
  .row
    .col-md-7
      .form-group
        = f.label :email
        = f.text_field :email, class: 'form-control', placeholder: 'Email'
  .row
    .col-md-7
      .form-group
        = f.label :phone
        = f.text_field :phone, class: 'form-control', placeholder: 'Phone'
  .row
    .col-md-7
      .form-group
        = f.label :status
        = f.text_field :status, class: 'form-control', placeholder: 'Status, ie. Available'
  .actions.mt-4
    = f.submit 'Save', class: 'btn btn-primary'
