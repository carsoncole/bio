%h1 Listing settings

%table
  %thead
    %tr
      %th Name
      %th Address
      %th Email
      %th Phone
      %th Is available
      %th
      %th
      %th

  %tbody
    - @settings.each do |setting|
      %tr
        %td= setting.name
        %td= setting.address
        %td= setting.email
        %td= setting.phone
        %td= setting.is_available
        %td= link_to 'Show', setting
        %td= link_to 'Edit', edit_setting_path(setting)
        %td= link_to 'Destroy', setting, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Setting', new_setting_path
