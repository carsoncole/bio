%head
  %title
    - if Setting&.first&.name.present?
      = Setting.first.name
      - if Setting&.first&.meta_title.present?
        \|
        = Setting.first.meta_title
    - else
      Bio
  - if Setting&.first&.meta_description.present?
    %meta{ name: "description",content: Setting.first.meta_description}
  %meta(name="viewport" content="width=device-width,initial-scale=1")
  %meta(charset="UTF-8")
  = csrf_meta_tags
  = csp_meta_tag

  = stylesheet_link_tag "application", "data-turbo-track": "reload"
  = javascript_importmap_tags
  %link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
  %script(src="https://kit.fontawesome.com/a5cd6aa43c.js" crossorigin="anonymous")
